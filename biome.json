{
	"$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
	"formatter": {
		"indentSize": 2,
		"indentStyle": "space",
		"lineWidth": 60
	},
	"javascript": {
		"formatter": {
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingComma": "all"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
