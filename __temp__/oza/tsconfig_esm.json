{
  "extends": "../../tsconfig_packages.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",
    "declarationDir": "dist/types",
    "composite": true,
    "sourceMap": false,
    "skipLibCheck": false,
    "strict": false,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__tests__",
    "**/__mocks__"
  ],
  "references": [
    {
      "path": "../kintsugi"
    }
  ]
}