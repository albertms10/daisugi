{
  "name": "@daisugi/kado",
  "description": "Kado is a minimal and unobtrusive inversion of control container.",
  "contributors": [
    {
      "name": "Alexander Sviridov",
      "email": "sviridoff.mail@gmail.com",
      "url": "https://github.com/sviridoff"
    }
  ],
  "version": "0.1.10",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daisugiland/daisugi.git",
    "directory": "packages/kado"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/kado.js",
      "require": "./dist/cjs/kado.js"
    }
  },
  "main": "./dist/esm/kado.js",
  "types": "dist/types/kado.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "src"
  ],
  "keywords": [
    "daisugi",
    "kado",
    "ioc",
    "dependency-injection",
    "injection",
    "dependency"
  ],
  "scripts": {
    "prepublishOnly": "tsc --build ./tsconfig.json && tsc --project ./tsconfig_cjs.json && yarn run test && minimize-js dist",
    "build": "rm -rf dist && tsc --build ./tsconfig.json && tsc --project ./tsconfig_cjs.json",
    "test": "tsc --build ./tsconfig_test.json && mocha dist/esm/__tests__/*.js",
    "format": "rome format --indent-style space ."
  },
  "dependencies": {
    "@daisugi/kintsugi": "^0.3.9"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.27",
    "minimize-js": "^1.3.0",
    "mocha": "^9.2.2",
    "rome": "next",
    "typescript": "^4.6.3"
  }
}
