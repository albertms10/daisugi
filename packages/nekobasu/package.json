{
  "name": "@daisugi/nekobasu",
  "description": "Nekobasu a lightweight asynchronous EventBus implementation.",
  "contributors": [
    {
      "name": "Alexander Sviridov",
      "email": "sviridoff.mail@gmail.com",
      "url": "https://github.com/sviridoff"
    }
  ],
  "version": "0.3.5",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daisugiland/daisugi.git",
    "directory": "packages/nekobasu"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/types/nekobasu.d.ts",
      "import": "./dist/esm/nekobasu.js",
      "require": "./dist/cjs/nekobasu.js"
    }
  },
  "main": "./dist/esm/nekobasu.js",
  "types": "dist/types/nekobasu.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "src"
  ],
  "keywords": [
    "daisugi",
    "nekobasu",
    "eventbus",
    "bus",
    "pubsub",
    "eventemitter"
  ],
  "scripts": {
    "prepublishOnly": "yarn run test && yarn run build",
    "build": "rm -rf dist && tsc --build ./tsconfig_esm.json && tsc --project ./tsconfig_cjs.json",
    "test": "tsc --build ./tsconfig.json && node --test dist/esm/__tests__/*.js",
    "tdd": "tsc-watch --build ./tsconfig.json --onSuccess \"node --test dist/esm/__tests__/*.js\"",
    "format": "rome format --indent-style space --quote-style single --line-width 60 --write src",
    "check": "rome check src --apply-suggested"
  },
  "devDependencies": {
    "@daisugi/kintsugi": "workspace:*",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.9",
    "rome": "^10.0.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.9.3"
  }
}
