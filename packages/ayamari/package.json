{
  "name": "@daisugi/ayamari",
  "description": "Ayamari helps you to create rich errors in a simple and stable way.",
  "contributors": [
    {
      "name": "Alexander Sviridov",
      "email": "sviridoff.mail@gmail.com",
      "url": "https://github.com/sviridoff"
    }
  ],
  "version": "0.0.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daisugiland/daisugi.git",
    "directory": "packages/ayamari"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/types/ayamari.d.ts",
      "import": "./dist/esm/ayamari.js",
      "require": "./dist/cjs/ayamari.js"
    }
  },
  "main": "./dist/esm/ayamari.js",
  "types": "dist/types/ayamari.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "src"
  ],
  "keywords": [
    "stacktrace",
    "errors",
    "error-monitoring",
    "error-handler",
    "error-handling",
    "error",
    "error-reporting",
    "error-classes",
    "exceptions"
  ],
  "scripts": {
    "prepublishOnly": "yarn run test && yarn run build",
    "build": "rm -rf dist && tsc --build ./tsconfig_esm.json && tsc --project ./tsconfig_cjs.json",
    "test": "tsc --build ./tsconfig.json && node --test dist/esm/__tests__/*.js",
    "tdd": "tsc-watch --build ./tsconfig.json --onSuccess \"node --test dist/esm/__tests__/*.js\"",
    "format": "rome format --indent-style space --quote-style single --line-width 60 --write src",
    "check": "rome check src --apply-suggested"
  },
  "dependencies": {
    "@daisugi/anzen": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "rome": "^11.0.0",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  }
}
