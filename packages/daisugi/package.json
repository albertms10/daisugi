{
  "name": "@daisugi/daisugi",
  "description": "Daisugi is a minimalist functional middleware engine.",
  "contributors": [
    {
      "name": "Alexander Sviridov",
      "email": "sviridoff.mail@gmail.com",
      "url": "https://github.com/sviridoff"
    }
  ],
  "version": "0.1.9",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daisugiland/daisugi.git",
    "directory": "packages/daisugi"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/daisugi.js",
      "require": "./dist/cjs/daisugi.js"
    }
  },
  "main": "./dist/esm/daisugi.js",
  "types": "dist/types/daisugi.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "src"
  ],
  "keywords": [
    "daisugi",
    "middleware",
    "pipeline"
  ],
  "scripts": {
    "prepublishOnly": "tsc --build ./tsconfig.json && tsc --project ./tsconfigCJS.json && yarn run test && minimize-js dist",
    "build": "rm -rf dist && tsc --build ./tsconfig.json && tsc --project ./tsconfigCJS.json",
    "tdd": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "@daisugi/kintsugi": "^0.3.8"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "jest": "^27.3.1",
    "minimize-js": "^1.2.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
