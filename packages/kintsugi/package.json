{
  "name": "@daisugi/kintsugi",
  "description": "Kintsugi is a set of utilities to help build a fault tolerant services.",
  "contributors": [
    {
      "name": "Alexander Sviridov",
      "email": "sviridoff.mail@gmail.com",
      "url": "https://github.com/sviridoff"
    }
  ],
  "version": "0.3.9",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daisugiland/daisugi.git",
    "directory": "packages/kintsugi"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/kintsugi.js",
      "require": "./dist/cjs/kintsugi.js"
    }
  },
  "main": "./dist/esm/kintsugi.js",
  "types": "dist/types/kintsugi.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "src"
  ],
  "keywords": [
    "daisugi",
    "kintsugi",
    "fault tolerant",
    "circuit breaker",
    "retry",
    "cache"
  ],
  "scripts": {
    "prepublishOnly": "tsc --build ./tsconfig.json && tsc --project ./tsconfig_cjs.json && yarn run test && minimize-js dist",
    "build": "rm -rf dist && tsc --build ./tsconfig.json && tsc --project ./tsconfig_cjs.json",
    "tdd": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "format": "rome format --indent-style space ."
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.27",
    "ioredis": "^4.28.5",
    "jest": "^27.5.1",
    "minimize-js": "^1.3.0",
    "rome": "next",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
